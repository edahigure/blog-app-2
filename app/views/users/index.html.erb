<div class="wrapper-1">
  
  <% @users.each do |user| %>
    <li class="item">  
       <img class="photo" src="<%= user.photo%>" alt="user photo">
       <div class= "container"> 

        
          <div class="name"> <%= link_to user.name, user_path(user.id) %> </div>
          <div class="post-num"> number of posts: <%= user.posts_counter %></div>
       </div>
    </li>
  <% end %>

</end>
